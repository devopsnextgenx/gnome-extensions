<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.dev-container-manager" path="/org/gnome/shell/extensions/dev-container-manager/">
    <key name="refresh-delay" type="i">
      <default>2</default>
    </key>
    <key name="icon-size" type="i">
      <default>25</default>
    </key>
    <key name="show-docker" type="b">
      <default>true</default>
      <summary>Show the Docker containers</summary>
      <description>Lists docker containers and allows control them.</description>
    </key>
    <key name="show-kind" type="b">
      <default>true</default>
      <summary>Show the Kind Clusters</summary>
      <description>Lists Kind Clusters and Nodes.</description>
    </key>
    <key name="llm-command" type="s">
      <default>"ollama"</default>
    </key>
    <key name="llm-url" type="s">
      <default>"http://localhost:11434"</default>
    </key>
    <key name="llm-chat-url" type="s">
      <default>"http://localhost:3000"</default>
    </key>
    <key name="gui-width" type="s">
      <default>"600"</default>
    </key>
    <key name="gui-height" type="s">
      <default>"900"</default>
    </key>
    <key name="llm-model" type="s">
        <default>"llama3.2:latest"</default>
        <summary>LLM model from Open Router</summary>
        <description>LLM model for prompting</description>
    </key>
    <key name="history" type="s">
        <default>"[]"</default>
        <summary>Chat History</summary>
        <description>Saving chat history as JSON.Stringify</description>
    </key>
    <key name="human-message-color" type="s">
        <default>"rgb(143,240,164)"</default>
        <summary>Background Color of Human Message</summary>
        <description>Customizing</description>
    </key>
    <key name="human-message-text-color" type="s">
        <default>"rgb(61,56,70)"</default>
        <summary>Text Color of Human message</summary>
        <description>Customizing</description>
    </key>
    <key name="llm-message-color" type="s">
        <default>"rgb(119,118,123)"</default>
        <summary>Background Color of LLM message</summary>
        <description>Customizing</description>
    </key>
    <key name="llm-message-text-color" type="s">
        <default>"rgb(0,0,0)"</default>
        <summary>Text Color of LLM message</summary>
        <description>Customizing</description>
    </key>
  </schema>
</schemalist>
